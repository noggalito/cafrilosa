<form id="form" role="form" class="form contact-form" method="POST" action="/mail">
  <div class="row">
    <div class="col-sm-4">
      <input type="text" name="name" placeholder="Nombre" class="form-control" required="required">
    </div>
    <div class="col-sm-8">
      <input type="email" name="email" placeholder="Email" class="form-control" required="required">
    </div>
  </div>
  <textarea name="message" rows="2" placeholder="Mensaje" class="form-control" required="required"></textarea>

  <div class="cafrilosa-recaptcha-wrapper hidden">
    <script src='//www.google.com/recaptcha/api.js' async defer></script>
    <div class="g-recaptcha" data-sitekey="{{recaptcha-key}}" data-theme="dark" data-callback="recaptchaOkay"></div>

    <div class="text-center">
      <input type="submit" name="submit" value="Enviar" class="btn btn-primary">
    </div>
  </div>

  <div class="text-center">
    <a href="#" class="btn btn-primary submit-contact-form-btn">Enviar</a>
    <p class="submitting-form hidden">Enviando..</p>
  </div>
</form>

<div class="hidden">
  <script type="text/x-handlebars-template" class="contact-form-response-template">
    <div class='alert alert-{{escaped-raw "kind"}} fade-in'>
      <a href='#' class='close' data-dismiss='alert' aria-label='close' style='color:black; opacity:1;'>&times;</a>
      {{escaped-raw 'message'}}
    </div>
  </script>
</div>
