{{!< default}}
{{#post}}
  {{> cover-post}}
  <section class="u-paddingSection container post">
    <div class="meta-data">
      <time>{{date}}</time>
      <div class="share">
        <p>Si te gust√≥ comparte:
          <a class="share-twitter icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}">
             <span class="hidden">Twitter</span>
         </a>
         <a class="share-facebook icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}">
             <span class="hidden">Facebook</span>
         </a>
        </p>
      </div>
    </div>
    <article class="single-post col-xs-12 col-sm-10">
      {{content}}
    </article>
  </section>
{{/post}}
